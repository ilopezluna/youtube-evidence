<html t:type="layout" title="Create New Video"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <div class="eg">
        <form t:type="Form" t:id="createVideo" class="create-video">

            <div class="field">
                <t:label for="url" />
                <t:textfield t:id="url"  label="url" value="video.url" validate="required"/>
            </div>

            <div class="field">
                <t:label for="date"/>
                <t:datefield t:id="date" label="date" value="video.date"/>
            </div>

            <div class="field">
                <t:label for="email" />
                <t:textfield t:id="email"  label="email" value="video.email"/>
            </div>

            <div class="field">
                <t:label for="city" />
                <t:textfield t:id="city"  label="city" value="video.city"/>
            </div>

            <div class="field">
                <t:label for="street" />
                <t:textfield t:id="street"  label="street" value="video.street"/>
            </div>


            <div class="kap">
                <t:KaptchaImage t:id="kaptchaImage"/>
            </div>
            <div class="kap">
                What characters are shown in the box above?
            </div>
            <div class="kap">
                <t:KaptchaField t:image="kaptchaImage" visible="true" label="characters"/>
            </div>
            <div class="kap">
                <input type="submit"/>
            </div>
        </form>
    </div>

</html>