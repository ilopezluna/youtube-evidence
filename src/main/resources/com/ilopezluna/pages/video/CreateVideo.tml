<html t:type="layout" title="Create New Video"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<div class="eg">
    <div class="kapbox">
        <form t:type="Form" t:id="createVideo">

            <t:label for="url" />
            <t:textfield t:id="url"  label="URL: " value="video.url" validate="required,regexp"/>

            <br/>

            <t:label for="date"/>
            <t:datefield t:id="date" label="Date: " value="video.date"/>

            <div class="kap">
                <t:KaptchaImage t:id="kaptchaImage"/>
            </div>
            <div class="kap">
                What characters are shown in the box above?
            </div>
            <div class="kap">
                <t:KaptchaField t:image="kaptchaImage" visible="true" label="characters"/>
            </div>
            <div class="kap">
                <input type="submit"/>
            </div>
        </form>
    </div>
</div>

</html>